    <script type="text/javascript">
        $(document).ready(function () {
            $('#sd').button({ icons: { primary: 'ui-icon-key' } });
            $('.editAuthor').button({ icons: { primary: 'ui-icon-pencil' } })
            $('.send').button({ icons: { primary: 'ui-icon-check' } })
          //  $('.edit').button({ icons: { primary: 'ui-icon-check' } })
            //$('#sd').click(function (e) { alert("I am working"); });
            //$('.testSubject').slider();
             $('#testSubject2').autocomplete({minLength:'1',source:[{label:'bear',value:'Bear Bibeault'},{label:'yehuda',value:'Yehuda Katz'},{label:'genius',value:'Albert Einstein'},{label:'honcho',value:'Pointy-haired Boss'},{label:'comedian',value:'Charlie Chaplin'}],delay:1000});
            //$("#testSubject2").autocomplete({ source: ["Дмитрий", "Мария", "Владимир", "Алексей", "Екатерина", "Олег", "Ольга"] });
             $(".datepicker").datepicker({
                 monthNames: ["Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"],
                 monthNamesShort: ["Январь", "Февраль", "Март", "Апрель", "Май", "Июнь", "Июль", "Август", "Сентябрь", "Октябрь", "Ноябрь", "Декабрь"],
                 dayNamesMin: ["Вс", "Пн", "Вт", "Ср", "Чт", "Пт", "Сб"],
                 firstDay: 1,
                 dateFormat: "dd.mm.yy",
                 showAnim: "slideDown",
                 showButtonPanel: "true",
                 closeText: "Готово",
                 currentText: "Сегодня",
                 changeMonth: "true",
                 changeYear:"true",
                 showWeek:"true"
             });
             $('.mainTabs').tabs({ collapsible: true });
             $('.testSubjectModal').dialog({ autoOpen: false, closeOnEscape: true, draggable: true, modal: true, resizable: true, hide: "slide", title: "Информация о сайте", buttons: { OK: (function (event) { $(".testSubjectModal").dialog("close"); }) } });

             $('#sd').click(function () {
                 $('.testSubjectModal').dialog('open');
             });
        })
     </script>
    <style>
        .ui-autocomplete.ui-menu {opacity: 0.7;}
